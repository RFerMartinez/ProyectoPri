<Window x:Class="proyecto_paradigmas_2025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyecto_paradigmas_2025"
        
        xmlns:vm="clr-namespace:proyecto_paradigmas_2025.ViewModels"
        xmlns:v="clr-namespace:proyecto_paradigmas_2025.Views"
        
        mc:Ignorable="d"
        Title="Sistema de Reparaciones - Paradigmas 2025" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <v:DashboardView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:GestionReparacionesViewModel}">
            <v:ListaReparacionesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:NuevoIngresoViewModel}">
            <v:NuevoIngresoView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DetalleReparacionViewModel}">
            <v:DetalleReparacionView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:GestionClientesViewModel}">
            <v:ListaClientesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DetalleClienteViewModel}">
            <v:DetalleClienteView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:GestionInventarioViewModel}">
            <v:ListaInventarioView/>
        </DataTemplate>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50">
            <StackPanel Margin="10">
                <TextBlock Text="TECH REPAIR" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"/>

                <Button Content="Dashboard" 
                        Command="{Binding MostrarDashboardCommand}"
                        Height="40" Margin="0,5" Background="#34495E" Foreground="White" BorderThickness="0"/>

                <Button Content="Reparaciones" 
                        Command="{Binding MostrarReparacionesCommand}"
                        Height="40" Margin="0,5" Background="#34495E" Foreground="White" BorderThickness="0"/>

                <Button Content="Nuevo Ingreso" 
                        Command="{Binding MostrarIngresoCommand}"
                        Height="40" Margin="0,5" Background="#34495E" Foreground="White" BorderThickness="0"/>

                <Button Content="Clientes" 
                        Command="{Binding MostrarClientesCommand}"
                        Height="40" Margin="0,5" Background="#34495E" Foreground="White" BorderThickness="0"/>

                <Button Content="Inventario" 
                        Command="{Binding MostrarInventarioCommand}"
                        Height="40" Margin="0,5" Background="#34495E" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#ECF0F1">
            <ContentControl Content="{Binding VistaActual}" Margin="20"/>
        </Border>
    </Grid>
</Window>